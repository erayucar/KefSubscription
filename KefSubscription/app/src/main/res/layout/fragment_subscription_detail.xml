<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/light_black"
    android:orientation="vertical"
    tools:context=".ui.detail.SubscriptionDetailFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_gradient_detail"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/sub_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@drawable/rectangle_gradient_detail"
            android:clickable="true"
            android:src="@drawable/baseline_arrow_back_24" />
        <ImageView
            android:id="@+id/sub_logo_ImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/sub_name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Spotify"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_detail_layout"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Subscription Details"
                android:textColor="@color/gray"
                android:textSize="25sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                tools:layout_editor_absoluteX="88dp" />


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                tools:layout_editor_absoluteX="-16dp">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_detail_item_layout"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/sub_price_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="40dp"
                        android:backgroundTint="@color/gray"
                        android:text="30"
                        android:textColor="@color/gray"
                        android:textSize="16dp"
                        android:textStyle="italic" />


                    <TextView
                        android:id="@+id/sub_currency_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="TRY"
                        android:textColor="@color/gray"
                        android:textSize="18sp"
                        android:textStyle="italic" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rectangle_2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:padding="2dp"
                            android:text="Payment Date"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sub_next_payment_date_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginBottom="10dp"
                            android:text="26.12.2023"
                            android:textColor="@color/gray" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_detail_item_layout"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:text="Billing Date"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sub_billing_date_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:text="26.12.2023"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <LinearLayout

                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_detail_item_layout"
                app:layout_constraintBottom_toTopOf="@+id/sub_period_type_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="14dp"
                    android:text="Category"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/sub_category_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="122dp"
                    android:layout_marginTop="14dp"
                    android:text="Category"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/sub_period_type_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rectangle_detail_item_layout"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@+id/cancel_sub_layout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="14dp"
                    android:text="Period Type"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/sub_period_type_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="105dp"
                    android:text="Monthly"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cancel_sub_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_detail_item_layout"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/sub_period_type_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="120dp"
                    android:text="Cancel Subscription"
                    android:textColor="#D32F2F" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>